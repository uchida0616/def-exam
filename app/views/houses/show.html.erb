<p id="notice"><%= notice %></p>
<p>
  <strong>物件名:</strong>
  <%= @house.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @house.rent %>
</p>

<p>
  <strong>住所</strong>
  <%= @house.adress %>
</p>

<p>
  <strong>築年数</strong>
  <%= @house.age %>
</p>

<p>
  <strong>備考</strong>
  <%= @house.content %>
</p>
<% @stations.each do |station| %>
<% n = 0 %>
  <h3>最寄駅<%= n += 1 %></h3>
  <p>
      <strong>路線名:</strong>
      <%= station.route_name %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= station.station_name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station.walking_minutes %><span>分</span>
  </p>
<% end %>
<%= link_to '編集', edit_house_path(@house) %>
<%= link_to '戻る', houses_path %>
